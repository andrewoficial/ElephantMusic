<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.kantser.elephantmusic.controller.PlayerPanelController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Текущее воспроизведение" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label fx:id="currentTrackLabel" text="Трек не выбран"/>

    <!-- Слайдер перемотки -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Позиция:"/>
        <Slider fx:id="seekSlider" min="0" max="100" value="0" styleClass="seek-slider"
                HBox.hgrow="ALWAYS"/>
        <Label fx:id="timeLabel" text="00:00 / 00:00" style="-fx-min-width: 100px;"/>
    </HBox>

    <!-- Панель управления воспроизведением -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="previousButton" styleClass="round-button" onAction="#previousTrack"/>
        <Button fx:id="playPauseButton" styleClass="round-button" onAction="#togglePlayPause"/>
        <Button fx:id="nextButton" styleClass="round-button" onAction="#nextTrack"/>
    </HBox>

    <!-- Панель громкости -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Громкость:"/>
        <Slider fx:id="volumeSlider" min="0" max="100" value="50" styleClass="volume-slider"
                HBox.hgrow="ALWAYS"/>
    </HBox>

</VBox>