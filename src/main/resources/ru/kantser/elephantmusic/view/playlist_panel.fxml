<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.kantser.elephantmusic.controller.PlayListPanelController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Плейлист" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Button text="Добавить трек" onAction="#addTrack"/>
        <Button text="Очистить плейлист" onAction="#clearPlaylist"/>
        <Button text="Сканировать папку" onAction="#addFolderForScan"/>
    </HBox>


    <ListView fx:id="playlistView" VBox.vgrow="ALWAYS"/>

</VBox>